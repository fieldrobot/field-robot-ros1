<?xml version="1.0"?>

<launch>

    <!-- run pointcloud_to_laserscan node -->
    <node pkg="gmapping" type="slam_gmapping" name="slam_gmapping" output="screen">
        <rosparam>
            throttle_scans: 1
            base_frame: base_footprint
            map_frame: map
            odom_frame: odom
            map_update: 1
            map_update_interval: 1
            sigma: 0.05
            kernelSize: 1
            lstep: 0.05
            astep: 0.05
            iterations: 5
            lsigma: 0.075
            ogain: 3.0
            lskip: 0
            minimumScore: 0.0
            srr: 0.0
            srt: 0.0
            str: 0.0
            stt: 0.0
            linearUpdate: 0.1
            angularUpdate: 0.1
            temporalUpdate: 0.5
            resampleThreshold: 0.5
            particles: 50
            llsamplerange: 0.01
            llsamplestep: 0.01
            lasamplerange: 0.01
            llsamplestep: 0.01
            transform_publish_period: 0.05
            occ_thresh: 0.25
            
        </rosparam>
    </node>

</launch>
