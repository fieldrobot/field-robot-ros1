<launch>
  <!-- remaps in order to create a constant environment -->
  <remap from="scan" to="robot_laserScan"/>
  <remap from="imu" to="robot_imu"/>
  <remap from="camera" to="camera" />

  <!-- setting arguments and parameters -->
  <param name="robot_description" command="$(find xacro)/xacro --inorder $(find data)/simulations/turtlebot3/model/turtlebot3_burger_for_pumpkin.urdf.xacro" />

  <!-- start simulation and loading the world -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find data)/general/worlds/pumpkin_rows.world"/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>

  <!-- spawn the robot -->
  <!-- this already publishes odometry information -->
  <node pkg="gazebo_ros" type="spawn_model" name="spawn_urdf"  args="-urdf -model turtlebot3_burger -x 0.4 -y 0.5 -z 0.0 -param robot_description" />

  <!-- publish transform information of the robot -->
  <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher">
    <param name="publish_frequency" type="double" value="50.0" />
    <param name="tf_prefix" value=""/>
  </node> 

</launch>
